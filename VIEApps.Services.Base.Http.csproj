<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
		<RootNamespace>net.vieapps.Services</RootNamespace>
		<AssemblyName>VIEApps.Services.Base.Http</AssemblyName>
		<WarningLevel>3</WarningLevel>
		<DocumentationFile>bin\$(Configuration)\$(TargetFramework)\VIEApps.Services.Base.Http.xml</DocumentationFile>
		<AssemblyTitle>VIEApps NGX Base</AssemblyTitle>
		<AssemblyVersion>10.3.1906.4</AssemblyVersion>
		<FileVersion>10.3.1906.4</FileVersion>
		<InformationalVersion>v10.3+rev:2019.06.20-multiple.targets</InformationalVersion>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<PackageId>VIEApps.Services.Base.Http</PackageId>
		<Version>10.3.1906.4-preview</Version>
		<Title>VIEApps NGX Base Service</Title>
		<Description>The base for all HTTP microservices in the VIEApps NGX</Description>
		<Authors>VIEApps.net</Authors>
		<Company>VIEApps.net</Company>
		<Product>VIEApps NGX</Product>
		<Copyright>© 2019 VIEApps.net</Copyright>
		<PackageLicense>LICENSE.md</PackageLicense>
		<PackageOutputPath>..\..\Components</PackageOutputPath>
		<PackageTags>services;microservices;vieapps;vieapps.components;vieapps.services;vieapps.microservices</PackageTags>
		<PackageReleaseNotes>Experimental with preview packages</PackageReleaseNotes>
		<PackageProjectUrl>https://vieapps.net/</PackageProjectUrl>
		<PackageIconUrl>https://github.com/vieapps/Components.Utility/raw/master/logo.png</PackageIconUrl>
		<RepositoryUrl>https://github.com/vieapps/Services.Base.Http</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
	</PropertyGroup>

	<ItemGroup>
		<None Remove=".DS_Store" />
		<None Remove=".gitattributes" />
		<None Remove=".gitignore" />
		<None Remove="LICENSE.md" />
		<None Remove="README.md" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Hosting" Version="2.2.0" />
		<PackageReference Include="Microsoft.AspNetCore.HttpOverrides" Version="2.2.0" />
		<PackageReference Include="Microsoft.AspNetCore.Server.IISIntegration" Version="2.2.1" />
		<PackageReference Include="Microsoft.AspNetCore.Server.Kestrel" Version="2.2.0" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
		<PackageReference Include="VIEApps.Components.Utility.AspNetCore" Version="10.2.1906.2" />
		<PackageReference Include="VIEApps.Services.Base" Version="10.2.1906.2" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' != 'netstandard2.0'">
		<PackageReference Include="VIEApps.Components.Utility.AspNetCore" Version="10.3.1906.4-preview" />
		<PackageReference Include="VIEApps.Services.Base" Version="10.3.1906.4-preview" />
	</ItemGroup>

</Project>